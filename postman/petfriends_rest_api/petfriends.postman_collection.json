							"});\r",
							"pm.test(\"Извлекаем id питомца и записываем его в переменную коллекции petid\", function () {\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.collectionVariables.set(\"petid\", jsonData.id);\r",
							"});\r",
							"pm.test(\"Извлекаем name питомца и записываем его в переменную коллекции name\", function () {\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.collectionVariables.set(\"name\", jsonData.name);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
